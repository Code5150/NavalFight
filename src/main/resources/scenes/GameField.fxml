<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import com.vladislav.navalfight.view.NavalFightGrid?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.vladislav.navalfight.controllers.GameFieldController"
      prefHeight="400.0" prefWidth="600.0" alignment="CENTER">
    <VBox fx:id="gridContainer" alignment="CENTER" style="-fx-border-color: black; -fx-border-width: 1;" fillWidth="false" >
        <NavalFightGrid fx:id="gameGrid"/>
    </VBox>
    <HBox alignment="CENTER" spacing="10">
        <Button fx:id="menuButton" text="В главное меню" onAction="#menuButtonClicked"/>
    </HBox>
</VBox>
